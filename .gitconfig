[user]
name = Kaoru Maeda
email = kaoru.maeda@dena.com

[github]
user = mad-p

[svn]
pushmergeinfo = true

[alias]
st = status
stat = status
ci = commit
co = checkout
chp = cherry-pick
br = branch
l = log --pretty=oneline --abbrev-commit
lg = log --graph --pretty=oneline --abbrev-commit
lo = log --pretty=short
url = config --get remote.origin.url
svnmerge = merge --no-ff --no-commit

[color]
branch = auto
diff = auto
status = auto
ui = true

[color "branch"]
current = reverse
local = normal
remote = blue
plain = green

[color "diff"]
commit = green bold
meta = blue bold
frag = magenta bold
old = red
new = green

[color "status"]
header = normal
added = blue bold
changed = green
untracked = cyan

[core]
whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
excludesfile = ~/.gitignore
	precomposeunicode = true
	quotepath = false
	ignorecase = false
	pager = less -FRSX

[branch]
autosetupmerge = true

[gui]
	fontui = -family sgothic -size 12 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family sgothic -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[push]
	default = simple

[pager]
	log = diff-highlight | less -FRSX
        show = diff-highlight | less -FRSX
        diff = diff-highlight | less -FRSX
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[commit]
	template = ~/.commit_template
[hub]
	host = github.dena.jp
[rerere]
	enabled = true
[submodule]
	recurse = false
[pull]
	ff = only
[lfs]
	storage = /Users/kaoru.maeda/Work/ddd/kenya-lfs-storage-test/lfs-storage
